<%@ taglib prefix="s" uri="/struts-tags"%>
<%@ taglib prefix="sx" uri="/struts-dojo-tags"%>
<sx:head />

<s:form action="/AddNewEmployeeAction.action" method="post"
	theme="simple">
	
<table width="100%" border="0" cellspacing="3" cellpadding="3" align="center"
	height="100%">
	<tr height="35" />
	
	<tr>
		<td width="45%" align="right">Employee ID : <s:textfield name="employeeID"
					size="20" maxlength="20" value="" onkeypress="return RestrictSpace(event);"/></td>
					<td width="10%"/>
		<td width="45%">Password : <s:password name="employeePassword"
					size="20" maxlength="20" value="" onkeypress="return RestrictSpace(event);"/></td>
	</tr>
	<tr height="15" />
	
	<tr>
		<td width="45%" align="right">First Name : <s:textfield name="employeeFirstName"
					size="20" maxlength="20" value="" onkeypress="return RestrictSpace(event);"/></td>
					<td width="10%"/>
		<td width="45%">Last Name : <s:textfield name="employeeLastName"
					size="20" maxlength="20" value="" onkeypress="return RestrictSpace(event);"/></td>
	</tr>
	<tr height="15" />
	
	<tr>
		<td width="45%" align="right">Address : <s:textarea name="employeeAddress"
					cols="50" rows="3" /></td>
					<td width="10%"/>
		<td width="45%">City : <s:textfield name="employeeCity"
					size="20" maxlength="20" value="" onkeypress="return RestrictSpace(event);"/></td>
	</tr>
	<tr height="15" />
	
	<tr>
		<td width="45%" align="right">Country : <s:textfield name="employeeCountry"
					size="20" maxlength="20" value="" onkeypress="return RestrictSpace(event);"/></td>
					<td width="10%"/>
		<td width="45%">Pin Code : <s:textfield name="pinCode"
					size="20" maxlength="6" value="" onkeypress="return RestrictSpace(event);"/></td>
	</tr>
	<tr height="15" />
	
	<tr>
		<td width="45%" align="right">Contact Number : <s:textfield name="contactNo"
					size="20" maxlength="20" value="" onkeypress="return RestrictSpace(event);"/></td>
					<td width="10%"/>
		<td width="45%">Role Index : <s:textfield name="roleIndex"
					size="20" maxlength="20" value="" onkeypress="return RestrictSpace(event);"/></td>
	</tr>
	<tr height="35" />
	
	<tr>
		<td width="45%" align="right">Company ID : <s:textfield name="companyID"
					size="20" maxlength="20" value="" onkeypress="return RestrictSpace(event);"/></td>
					<td width="10%"/>
		<td width="45%">Locale : <s:textfield name="employeeLocale"
					size="20" maxlength="20" value="" /></td>
	</tr>
	<tr height="35" />
	
	<tr >
		<td colspan="4" align="center"><button type="submit">
				<s:text name="button.addEmployee"/>
			</button></td>
	</tr>
	<tr height="15" />
</table>
</s:form>

<script>
    document.getElementById("settingsTab").style.textDecoration = "underline";
	document.getElementById("settingsTab").style.backgroundColor = "#9DB1ED";
	document.getElementById("employeeTab").style.backgroundColor = "#A9A9F5";
</script>



