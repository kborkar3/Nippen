            ps.setString(13, contactNo2);
            ps.setString(14, contactNo2);
            ps.setString(15, contactNo2);
            ps.setInt(16, 1);


            InputStream is = null;
            is = new FileInputStream(new File("D:\\nippenlogo.png"));
            ps.setBinaryStream(17, is);

            rs = ps.executeUpdate();

            if (rs == 1)
