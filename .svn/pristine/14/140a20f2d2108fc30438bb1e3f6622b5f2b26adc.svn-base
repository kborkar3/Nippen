    public List<CompanyBean> getCompanyNames()
    {
        List<CompanyBean> companyList = new ArrayList<CompanyBean>();

        PreparedStatement ps = null;
        ResultSet rs = null;
        Connection con = null;
        Statement stmt = null;
        short recordFound = 0;

        String sql = null;
        try
        {
            con = getConnection();
            stmt = con.createStatement();

            sql = GET_ACTIVE_COMPANY_NAMES;
            ps = con.prepareStatement(sql);

            rs = ps.executeQuery();

            while (rs.next())
            {
                CompanyBean bean = new CompanyBean();
                bean.setCompanyName((rs.getString(CompanyServiceSQLIfc.COLUMNS.COMPANY_NAME)));
                companyList.add(bean);
                ++recordFound;
            }

            if (recordFound == 0)
            {
                companyList = null;
                throw new Exception("No company found");
            }
        }

        catch (SQLException e)
        {
            e.printStackTrace();
        }
        catch (Exception e)
        {
            System.out.println("Exception in closing DB resources");
            e.printStackTrace();
        }
        finally
        {
            try
            {
                rs.close();
                stmt.close();
                con.close();
            }
            catch (SQLException e)
            {
                System.out.println("Exception in closing DB resources");
            }
        }

        return companyList;
    }

